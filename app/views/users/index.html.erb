<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
        | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
        | <%= link_to "edit", edit_user_path(user)%>
    </li>
  <% end %>
</ul>
<%= will_paginate %>